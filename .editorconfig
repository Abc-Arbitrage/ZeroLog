root = true


[*]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = crlf

[*.{cs,csx,xaml,cake}]
indent_size = 4
indent_style = space

[*.{config,nuspec,resx}]
indent_size = 2
indent_style = space

[*.{csproj,vcxproj,props,targets}]
indent_size = 2
indent_style = space
insert_final_newline = false

[*.sln]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf

# Verify
[*.{received,verified}.txt]
charset = utf-8-bom
end_of_line = lf
indent_size = unset
indent_style = unset
insert_final_newline = false
tab_width = unset
trim_trailing_whitespace = false

[*.cs]
resharper_indent_raw_literal_string = indent
